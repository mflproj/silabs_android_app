<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/adapter_layout_padding"
    android:theme="@style/AppTheme.Light"
    tools:background="@color/silicon_labs_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/adapter_layout_padding"
            android:adjustViewBounds="false"
            android:padding="@dimen/adapter_item_padding"
            app:srcCompat="@drawable/silicon_labs_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/adapter_item_padding"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_xlarge" />

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/adapter_item_padding"
                android:text="@string/dialog_about_app_version" />

            <TextView
                android:id="@+id/tv_adk_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/adapter_item_padding"
                android:text="@string/dialog_about_adk_version" />

            <TextView
                android:id="@+id/tv_api_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/adapter_item_padding"
                android:text="@string/dialog_about_api_version" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/dialog_about_copyright" />
</LinearLayout>
